@using TechElite.Models
@model ForumViewModel
@{
	ViewData["Title"] = "My threads";
}
<head>
    <link rel="stylesheet" href="~/css/forum.css" />
    <link rel="stylesheet" href="~/css/thread.css" />
</head>

<main>
    <div class="forum-container">
        <article>
            <section>
                <h4>Mina trådar</h4>
                <div>
                    @foreach (var t in Model.ForumThreads)
                    {
                        <a class="new-thread" asp-controller="Forum" asp-action="Thread" asp-route-id="@t.ThreadId">@t.ThreadTitle</a>
                    }
                </div>
                <h4>Mina inlägg</h4>
                <div>
                    @foreach (var r in Model.ForumReplies)
                    {
                        <a class="new-thread" asp-controller="Forum" asp-action="Thread" asp-route-id="@r.ThreadId">@r.Content</a>
                    }
                </div>
            </section>
        </article>
    </div>
</main>