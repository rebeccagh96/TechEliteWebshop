@model ForumViewModel
@using TechElite.Areas.Identity.Data
@using TechElite.Models
@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/forum.css" />
</head>
<article>
    <form asp-action="Create" method="post" id="create-thread">
        @Html.AntiForgeryToken()
        <h2>Skapa tråd</h2>
        <label for="categoryId">Kategori</label>
        <select name="categoryId" id="thread-category" required>
            <option value="">Välj Kategori</option>
            @foreach (var c in Model.ForumCategories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <label for="threadTitle">Titel</label>
        <input type="text" name="threadTitle" id="title" minlength="3" maxlength="30" required>
        <label for="threadContent">Text</label>
        <textarea id="text" name="threadContent" rows="5" columns="50" required></textarea>
        <button type="submit" class="btn" id="submit">Publicera</button>
    </form>
</article>
