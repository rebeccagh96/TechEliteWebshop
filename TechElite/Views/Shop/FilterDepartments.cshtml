@model IEnumerable<TechElite.Models.Product>
@{
    ViewData["Title"] = "Filter Departments";
}

<head>
    <link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />
</head>

<main>
    <div class="shop-container">
        <article class="produkten">
            @foreach (var p in Model)
            {
                <section>
                    <button>
                        <a asp-controller="Shop" asp-action="ProductPage" asp-route-id="@p.ProductId">
                            <div class="products">
                                <img src="~/img/Products/Department@(p.DepartmentId)/Product@(p.ProductId).svg" alt="">
                            </div>
                            <p>@p.ProductName</p>
                            <p><b>@p.Price</b></p>
                            <p>@p.Description</p>
                        </a>
                    </button>
                    <button class="Varukorg">Lägg till i Varukorgen!</button>
                </section>
            }
        </article>
    </div>
</main>
