@using TechElite.Models
@model IEnumerable<TechElite.Models.Product>
@{
    ViewData["Title"] = "Filter Departments";
}
@{
    var department = Model
        .Where(d => d.DepartmentId != null)
        .Select(d => d.DepartmentId);
}

<head>
    <link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />
</head>

<main>
    <div class="shop-container">
        <article class="Feature">
            <img max-height="400px" src="~/img/Shop/Department@(department.FirstOrDefault()).jpg" alt="shop.img">
        </article>
        <article class="produkten">
            @foreach (var p in Model)
            {
                <section>
                   
                        <a asp-controller="Shop" asp-action="ProductPage" asp-route-id="@p.ProductId">
                            <div class="products">
                                <img src="~/img/Products/Department@(p.DepartmentId)/Product@(p.ProductId).svg" alt="">
                            </div>
                            <p>@p.ProductName</p>
                            <p><b>@p.Price</b></p>
                            <p>@p.Description</p>
                        </a>
                    
                    <button class="Varukorg">Lägg till i Varukorgen!</button>
                </section>
            }
        </article>
    </div>
</main>
