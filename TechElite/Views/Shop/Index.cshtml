@using TechElite.Models
@model ShopViewModel

@{
    ViewData["Title"] = "Shop";
}
<head>
      <link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
</head>



<main>
    <article class="Feature">
        <img max height="500px" src="~/img/Shop/tech.shop.jpg" alt="shop.img">
    </article>
    <div class="shop-container">
        <article>
            <div class="filter">
                <div class="filter-icons">
                    <div class="dropdown">
                       
                            <img src="~/img/Icons/filter_blck.svg" alt="icon">
                        
                        <div class="dropdown-content">
                            @foreach (var d in Model.Departments)
                            {
                                <a asp-controller="Shop" asp-action="FilterDepartments" asp-route-id="@d.DepartmentId">@d.DepartmentName</a>
                            }
                        </div>
                    </div>
                </div>
                <div class="cartlänk">
                    <a href="cart.html">
                        <img src="~/img/Icons/cart_blck.svg" alt="cart">
                    </a>
               
                </div>
            </div>
        </article>
        <div class="product-view">
            <article>
                @foreach (var p in Model.Products)
                {
                    <section class="Shop-section">

                        <a asp-controller="Shop" asp-action="ProductPage" asp-route-id="@p.ProductId">
                            <div class="products">
                                <img src="~/img/Products/Department@(p.DepartmentId)/Product@(p.ProductId).svg" alt="">
                            </div>
                            <p>@p.ProductName</p>
                            <p><b>@p.Price</b></p>
                            <p>@p.Description</p>
                        </a>

                    </section>
                }
            </article>
        </div>
    </div>
</main>
