@{
    ViewData["Title"] = "Home Page";
    var itemCount = ViewBag.CartItemCount ?? 0; // Cart item count from the controller
}

<main>
    <div class="filter">
        <h2>Nyheter</h2>
        <div class="filter-icons">
            <img src="~/img/Icons/category_blck.svg" alt="icon">
            <img src="~/img/Icons/filter_blck.svg" alt="icon">
        </div>

        <!-- Cart Icon and Item Count -->
        <a href="@Url.Action("Index", "Order")">
            <img src="~/img/Icons/cart_blck.svg" alt="cart">
            <span class="cart-item-count">@itemCount</span> <!-- Display cart item count here -->
        </a>
    </div>

    <!-- Product Listings -->
    <article>
        <section>
            <div class="products">
                <img src="~/img/Products/Charger/Charger2.svg" alt="Charger">
            </div>
            <p>Charger</p>
            <p><b>$19.99</b></p>
            <p>Body text</p>
            <a href="@Url.Action("AddToCart", "Order", new { productId = 1, name = "Charger", price = 19.99, quantity = 1 })" class="btn btn-primary">
                Add to Cart
            </a>

        </section>
        <!-- Add more products similarly -->
    </article>
</main>
