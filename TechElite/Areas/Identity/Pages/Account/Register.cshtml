@page
@model TechElite.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


<main>
    <div class="login-container">
        <article>
            <div class="loginwelcome">
                <div class="welcome">
                    <h2>Välkommen till TechElite!</h2>
                    <p>Registrera dig för att få tillgång till exklusiva erbjudanden och nyheter.</p>
                    <p>
                        Har du redan ett konto? Logga in för att se dina senaste köp och favoriter, delta i
                        diskussionerna i forumet, och mycket mer!
                    </p>
                </div>
                <form id="registerForm" class="loginregister" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Skapa ett nytt konto</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Username">Användarnamn</label>
                        <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="Användarnamn" />
                        <p>Minst 4 och max 20 alfanumeriska tecken.</p>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.FirstName">Förnamn</label>
                        <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Förnamn" />
                        <p>Minst 2 och max 40 alfanumeriska tecken.</p>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.LastName">Efternamn</label>
                        <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Efternamn" />
                        <p>Minst 2 och max 40 alfanumeriska tecken.</p>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Email">E-mejladress</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="namn@exempel.se" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Password">Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />
                        <p>Måste innehålla minst 8 och max 100 alfanumeriska tecken.</p>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrera</button>
                </form>
            </div>
        </article>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}