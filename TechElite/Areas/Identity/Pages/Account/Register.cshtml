@page
@model TechElite.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Skapa ett nytt konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="Användarnamn" />
                <label asp-for="Input.Username">Användarnamn</label>
                <p>Användarnamn måste innehålla minst 4 och max 20 alfanumeriska tecken.</p>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Förnamn" />
                <label asp-for="Input.FirstName">Förnamn</label>
                <p>Förnamn måste innehålla minst 2 och max 40 alfanumeriska tecken.</p>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Efternamn" />
                <label asp-for="Input.LastName">Efternamn</label>
                <p>Efternamn måste innehålla minst 2 och max 40 alfanumeriska tecken.</p>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="namn@exempel.se" />
                <label asp-for="Input.Email">E-mejladress</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />
                <label asp-for="Input.Password">Lösenord</label>
                <p>Lösenord måste innehålla minst 8 och max 100 alfanumeriska tecken.</p>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />
                <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}